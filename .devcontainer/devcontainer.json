{
  "name": "AIMER PRO - Computer Vision Environment",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:3.10",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.10",
      "installTools": true
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.pylint",
        "ms-python.debugpy",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "forwardPorts": [5000],
  "portsAttributes": {
    "5000": {
      "label": "AIMER Web Interface",
      "onAutoForward": "openBrowser"
    }
  },
  "postCreateCommand": "chmod +x .devcontainer/setup.sh && ./.devcontainer/setup.sh",
  "postStartCommand": "echo 'ðŸŽ¯ AIMER PRO prÃªt ! Tapez: python main.py --auto-fix (si pas encore fait) ou python launch_web.py'",
  "remoteUser": "vscode"
}
